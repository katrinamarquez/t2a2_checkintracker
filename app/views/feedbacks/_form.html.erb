<%= form_with(model: feedback, local: true) do |form| %>
  <% if feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
        <% feedback.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <br>
    <div class="field">
    <%= form.label :restaurant %>
    <%# Show drop down of restaurant names in restaurants model %>
    <%= form.select "restaurant_id", options_from_collection_for_select(@restaurants, "id", "restaurant_name") %>
  </div>
  <div class="field">
    <%= form.label :comments %>
    <%= form.text_area :comments %>
  </div>
  <br>
  <div class="field">
    <%= form.label :pic %>
    <%= form.file_field :pic %>
  </div>
  <br>
    <%# Pass current user ID to restaurant created %>
  <%= form.hidden_field :user_id, :value => current_user.id %>
  <div class="actions">
    <%= form.submit %>
  </div>
  <br>
  <br>
<% end %>
