<p id="notice"><%= notice %></p>

<h1>Feedbacks</h1>
<br>
<%= link_to 'Feedback Form', new_feedback_path %>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Comments</th>
      <th>Restaurant</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.comments %></td>
        <td><%= Restaurant.find(feedback.restaurant_id).restaurant_name %></td>
        <td><%= User.find(feedback.user_id).email %> </td>
        <td><%= link_to 'Show', feedback %></td>
        <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
        <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
<%= link_to 'Back', root_path %>
