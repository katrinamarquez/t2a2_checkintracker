<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>
<br>
<p>Restaurants using CheckIn Tracker to access contract tracing safely.</p>
<br>
<hr>
<br>
<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.restaurant_name %></td>
        <td><%= restaurant.restaurant_address %></td>
        <td><%= restaurant.restaurant_phone %></td>
        <td><%= restaurant.restaurant_email %></td>
        <td><%= link_to 'View', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Delete', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
<%= link_to 'Back', root_path %>
